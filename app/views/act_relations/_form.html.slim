= form.error_notification
.form-inputs
  = form.input :start_date, as: :date, start_year: Date.today.year,
                                 end_year: Date.today.year - 90,
                                 order: [:day, :month, :year]
  = form.input :end_date, as: :date, start_year: Date.today.year,
                               end_year: Date.today.year - 90,
                               order: [:day, :month, :year], include_blank: true
  = form.input :title, collection: @titles, as: :collection_select
  = form.input :title_reverse, collection: @titles_reverse, as: :collection_select