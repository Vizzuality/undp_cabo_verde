= form.error_notification
.form-inputs
  = form.input :name
  = form.input :event
  = form.input :human
  = form.input :alternative_name
  = form.input :short_name
  = form.input :start_date, as: :date, start_year: Date.today.year,
                                 end_year: Date.today.year - 90,
                                 order: [:day, :month, :year]
  = form.input :end_date, as: :date, start_year: Date.today.year,
                               end_year: Date.today.year - 90,
                               order: [:day, :month, :year], include_blank: true
  = form.input :description