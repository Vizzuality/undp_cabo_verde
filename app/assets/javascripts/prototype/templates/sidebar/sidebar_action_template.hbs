<div class="content">
  <h1 class="title">
    {{name}}
    {{#if alternative_name}}
      <div class="subtitle">{{alternative_name}} {{#if short_name}}({{short_name}}){{/if}}</div>
    {{else}}
      {{#if short_name}}
        <div class="subtitle">({{short_name}})</div>
      {{/if}}
    {{/if}}
  </h1>

  <div class="tags">
    <div class="tag">{{event_or_activity}}</div>
    <div class="tag">{{human_or_natural}}</div>
  </div>


  {{#if budget}}
    <h2 class="title -secondary">{{{t 'front.budget'}}}</h2>
    <p><span class="medium light">{{budget.currency_symbol}}</span> <span class="big light">{{budget.value}}</span></p>
  {{/if}}

  <ul class="visual-list -textual -notick">
    <li class="item -nomargin">
      <h2 class="title -secondary">{{{t 'front.start_date'}}}</h2>
      {{dates.startDate}}
    </li>
    <li class="item -nomargin">
      <h2 class="title -secondary">{{{t 'front.end_date'}}}</h2>
      {{dates.endDate}}
    </li>
  </ul>

  {{#if description}}
    <h2 class="title -secondary">{{{t 'front.description'}}}</h2>
    <p>{{description}}</p>
  {{/if}}

  {{#if organization_types}}
    <h2 class="title -secondary">{{{t 'front.organization_types'}}}</h2>
    <ul class="visual-list -textual">
      {{#each organization_types}}
        <li class="item">{{name}}</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if socio_cultural_domains}}
    <h2 class="title -secondary -normalcase">{{{t 'front.3x5'}}}</h2>
    <ul class="visual-list">
      {{#each socio_cultural_domains}}
        <li class="item" title="{{name}}">
          {{#if icon_identifier}}
            <svg class="icon" title="{{{name}}}">
                <use xlink:href="#{{icon_identifier}}" x="0" y="0">
            </svg>
          {{else}}
            <div class="icon -placeholder"></div>
          {{/if}}
          {{{trunc name}}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
  {{#if other_domains}}
    <h2 class="title -secondary -normalcase">{{{t 'front.3xX'}}}</h2>
    <ul class="visual-list">
      {{#each other_domains}}
        <li class="item" title="{{name}}">
          {{#if icon_identifier}}
            <svg class="icon" title="{{{name}}}">
                <use xlink:href="#{{icon_identifier}}" x="0" y="0">
            </svg>
          {{else}}
            <div class="icon -placeholder"></div>
          {{/if}}
          {{{trunc name}}}
        </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if relations}}
    <h2 class="title -secondary">{{{t 'front.relationships'}}}</h2>
    {{#if relations.actors}}
      {{{t 'front.to_actors'}}}
      <ul class="visual-list -standard relations">
        {{#each relations.actors}}
          <li class="item js-relation" data-id="{{id}}" data-type="actors">
            <svg class="icon -actor">
              {{#compare level  "===" "macro"}}
                <use x="-6" xlink:href="#{{level}}MarkerIcon" y="-6"></use>
              {{else}}
                {{#compare level  "===" "meso"}}
                  <use x="-4.5" xlink:href="#{{level}}MarkerIcon" y="-5"></use>
                {{else}}
                  <use x="-5" xlink:href="#{{level}}MarkerIcon" y="-3"></use>
                {{/compare}}
              {{/compare}}
            </svg>
            {{name}}
            {{#if this.info}}
              {{#compare this.hierarchy "===" "parents"}}
                <span class="_greyed">- {{this.info.title_reverse}}</span>
              {{else}}
                <span class="_greyed">- {{this.info.title}}</span>
              {{/compare}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
      {{#if relations.actions}}
      <br/>
      {{/if}}
    {{/if}}
    {{#if relations.actions}}
      {{{t 'front.to_actions'}}}
      <ul class="visual-list -standard relations">
        {{#each relations.actions}}
          <li class="item js-relation" data-id="{{id}}" data-type="actions">
            <svg class="icon -action">
              {{#compare level  "===" "macro"}}
                <use x="-6" xlink:href="#{{level}}MarkerIcon" y="-6"></use>
              {{else}}
                {{#compare level  "===" "meso"}}
                  <use x="-4.5" xlink:href="#{{level}}MarkerIcon" y="-5"></use>
                {{else}}
                  <use x="-5" xlink:href="#{{level}}MarkerIcon" y="-3"></use>
                {{/compare}}
              {{/compare}}
            </svg>
            {{name}}
            {{#if this.info}}
              {{#compare this.hierarchy "===" "parents"}}
                <span class="_greyed">- {{this.info.title_reverse}}</span>
              {{else}}
                <span class="_greyed">- {{this.info.title}}</span>
              {{/compare}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{/if}}
  {{/if}}
</div>
