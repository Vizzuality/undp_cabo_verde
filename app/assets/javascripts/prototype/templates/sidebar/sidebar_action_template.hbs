<div class="content">
  <h1 class="title">{{name}}</h1>
  {{#if socio_cultural_domains}}
    <h2 class="title -secondary">{{{t 'front.3x5'}}}</h2>
    <ul class="visual-list">
      {{#each socio_cultural_domains}}
        <li class="item" title="{{name}}">
          {{#if icon_identifier}}
            <svg class="icon" title="{{{name}}}">
                <use xlink:href="#{{icon_identifier}}" x="0" y="0">
            </svg>
          {{else}}
            <div class="icon -placeholder"></div>
          {{/if}}
          {{{trunc name}}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
  {{#if other_domains}}
    <h2 class="title -secondary">{{{t 'front.3xX'}}}</h2>
    <ul class="visual-list">
      {{#each other_domains}}
        <li class="item" title="{{name}}">
          {{#if icon_identifier}}
            <svg class="icon" title="{{{name}}}">
                <use xlink:href="#{{icon_identifier}}" x="0" y="0">
            </svg>
          {{else}}
            <div class="icon -placeholder"></div>
          {{/if}}
          {{{trunc name}}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
  <h2 class="title -secondary">{{{t 'front.relationships'}}}</h2>
  {{#if relations.actors}}
    {{{t 'front.to_actors'}}}
    <ul class="visual-list -standard">
      {{#each relations.actors}}
        <li class="item">
          <svg class="icon -actor">
            {{#compare level  "===" "macro"}}
              <use x="-6" xlink:href="#{{level}}MarkerIcon" y="-6"></use>
            {{else}}
              {{#compare level  "===" "meso"}}
                <use x="-4.5" xlink:href="#{{level}}MarkerIcon" y="-5"></use>
              {{else}}
                <use x="-5" xlink:href="#{{level}}MarkerIcon" y="-3"></use>
              {{/compare}}
            {{/compare}}
          </svg>
          {{name}}
          {{#if this.info}}
            {{#compare this.hierarchy "===" "parents"}}
              <span class="_greyed">- {{this.info.title}}</span>
            {{else}}
              <span class="_greyed">- {{this.info.title_reverse}}</span>
            {{/compare}}
          {{/if}}
        </li>
      {{/each}}
    </ul>
    {{#if relations.actions}}
    <br/>
    {{/if}}
  {{/if}}
  {{#if relations.actions}}
    {{{t 'front.to_actions'}}}
    <ul class="visual-list -standard">
      {{#each relations.actions}}
        <li class="item">
          <svg class="icon -action">
            {{#compare level  "===" "macro"}}
              <use x="-6" xlink:href="#{{level}}MarkerIcon" y="-6"></use>
            {{else}}
              {{#compare level  "===" "meso"}}
                <use x="-4.5" xlink:href="#{{level}}MarkerIcon" y="-5"></use>
              {{else}}
                <use x="-5" xlink:href="#{{level}}MarkerIcon" y="-3"></use>
              {{/compare}}
            {{/compare}}
          </svg>
          {{name}}
          {{#if this.info}}
            {{#compare this.hierarchy "===" "parents"}}
              <span class="_greyed">- {{this.info.title}}</span>
            {{else}}
              <span class="_greyed">- {{this.info.title_reverse}}</span>
            {{/compare}}
          {{/if}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
  <br/>
  <div class="checkbox"><input type="checkbox" class="js-relationships-checkbox" id="sidebar-relationships-map" {{#if toggleRelationshipsActive}}checked="checked"{{/if}} /><label class="label" for="sidebar-relationships-map">{{{t 'front.show_relationships_on_map'}}}</label></div>
</div>
<div class="content -secondary">
  <div class="comments">
    <h2 class="title -secondary">{{{t 'front.comments'}}}</h2>
    <div class="comments-section">
      <!-- EXAMPLE OF COMMENT STRUCTURE
